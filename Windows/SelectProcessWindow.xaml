<Window x:Class="InstanceManager.Windows.SelectProcessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstanceManager.Windows"
        mc:Ignorable="d"
        Title="SelectProcessWindow" Height="384" Width="836"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True">
    <DockPanel LastChildFill="True">
        <Button x:Name="SelectProcessBtn" Click="SelectProcessBtn_Click" Content="Select" Style="{StaticResource AccentButtonStyle}" DockPanel.Dock="Top" Width="839"/>
        <ListBox DockPanel.Dock="Bottom" x:Name="ProcessesListBox" Width="831" d:ItemsSource="{d:SampleData ItemCount=5}"/>
    </DockPanel>
</Window>
